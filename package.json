{
  "name": "social-media-kit",
  "private": true,
  "version": "0.2.0",
  "description": "A comprehensive social media kit for creating, formatting, and posting content across LinkedIn, Twitter/X, and Bluesky platforms",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server": "node --env-file=.env server.js",
    "kill-port": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "start": "npm run kill-port && npm run build && npm run server"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dompurify": "^3.0.6",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "marked": "^12.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
